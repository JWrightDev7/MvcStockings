@model MvcStockings.Models.StockingTypeViewModel


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Stockings" asp-action="Index" method="get">
    <p>
        Search: <input type="text" name="search" />
        Filter:
        <select asp-for="StockingType" asp-items="Model.Types">
            <option value="">All</option>
        </select>

        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stockings[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stockings[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stockings[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stockings[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stockings[0].Review)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Stockings) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Review)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
